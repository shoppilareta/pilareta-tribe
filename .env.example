# App Configuration
NEXT_PUBLIC_APP_URL=https://tribe.pilareta.com
NODE_ENV=production

# Shopify Configuration
SHOPIFY_STORE_DOMAIN=pilareta.com
SHOPIFY_CLIENT_ID=your_shopify_client_id_here
SHOPIFY_SHOP_ID=your_shop_id_here
SHOPIFY_ACCOUNTS_MODE=new

# For Classic mode only (if SHOPIFY_ACCOUNTS_MODE=classic)
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_token_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://tribe:your_secure_password_here@localhost:5432/pilareta_tribe

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=generate_a_32_character_random_string_here

# Google Maps API (for Studio Locator)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
